<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hyperactive.shilo.jobimshilo.search_jobs.SecondTabFragment">

    <AutoCompleteTextView
        android:id="@+id/searchViewTabMaps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/imageViewTabLocation"
        android:clickable="true"
        android:hint="@string/search_by_location2"
        android:visibility="visible" />


    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/searchViewTabMaps" />

    <ImageView
        android:id="@+id/imageViewTabLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mapView"
        android:layout_alignParentEnd="true"
        android:visibility="visible"
        app:srcCompat="@android:drawable/ic_search_category_default" />

</RelativeLayout>
