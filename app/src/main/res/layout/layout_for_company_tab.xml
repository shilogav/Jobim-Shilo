<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/companyTabContainer">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/companyTabCheckBox"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/companyTabTextView"
        android:textSize="16sp"
        android:layout_marginEnd="11dp"
        android:layout_alignBaseline="@+id/companyTabCheckBox"
        android:layout_alignBottom="@+id/companyTabCheckBox"
        android:layout_toStartOf="@+id/companyTabCheckBox" />
</RelativeLayout>