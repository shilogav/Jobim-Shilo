<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sky_4"
    tools:context="com.hyperactive.shilo.jobimshilo.main_desktop_jobs.RightFragment">

    <!-- -->

    <ImageButton
        android:id="@+id/imageButtonSendSMS"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/sms_1"
        android:layout_alignTop="@+id/imageButtonPhoneCall"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/imageButtonPhoneCall"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/phone"
        android:layout_marginTop="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/imageButtonSendMail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/mail"
        android:layout_alignTop="@+id/imageButtonSendSMS"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/imageButtonRateStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/star_selector"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/imageButtonPhoneCall"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
